# top-most EditorConfig file
root = true

[*]
end_of_line = crlf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

[*.xml]
indent_style = space

[*.cs]
indent_style = space
indent_size = 4
tab_width = 4
dotnet_sort_system_directives_first = true
dotnet_separate_import_directive_groups = false

[*.{js,ts}]
indent_style = space
indent_size = 2

[*.{css,scss}]
indent_style = space
indent_size = 2

